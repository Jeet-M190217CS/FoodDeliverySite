<br>
<h3 class="mb-3">User Profile</h3>
<div class="row">
    <div class="col-md-6">
        <h6>Name</h6>
        <h5><%= @user.name%></h5>
        <h6>Email</h6>
        <h5><%= @user.email%></h5>
        <h6>Phone</h6>
        <h5><%= @user.phone%></h5>
        <%if @user.role == "U" && !@user.address.nil? %>
            <h6>Address</h6>
            <h5><%= @user.address.street+','+@user.address.city+','+@user.address.pincode+','+@user.address.state%></h5>
        <% elsif @user.role == "R" %>
            <h6>Restaurant Details</h6>
            <h5><%= @user.restaurant.name%></h5>
            <h5><%= @user.restaurant.address.street+','+@user.restaurant.address.city+','+@user.restaurant.address.pincode+','+@user.restaurant.address.state%></h5>
        <% end %>
    </div>
</div>