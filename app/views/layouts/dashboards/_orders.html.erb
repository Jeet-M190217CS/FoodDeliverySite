<div class="text-center"> <h2>Orders</h2><br></div>
<table id="view-order-table" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>User Id</th>
                <th>Restaurant Id</th>
                <th>Placed At</th>
                <th>Status</th>
            </tr>
        </thead>

        <tbody>
            <% @orders.each do |order|%>
                <tr id="view-row-<%=order.id%>">
                    <td><%= order.id %></td>
                    <td><%= order.user_id %></td>
                    <td><%= order.restaurant_id %></td>
                    <td><%= order.created_at %></td>
                    <td><%= order.status %></td>
                </tr>
            <% end %>
        </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#view-order-table').DataTable();
} );
</script>