<% if params[:show] == "additem"%>
<% add_active = "active";add_show="show active"%>
<% else %>
<% view_active = "active";view_show="show active"%>
<% end %>
<div class="col-2" style="background-color:aliceblue;padding-right:0">
    <div class="nav nav-pills flex-column" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link <%= view_active%>" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">View Items</a>
        <a class="nav-link <%= add_active%>" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Add Items</a>
    </div>
</div>
<div class="col-9">
    <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade <%=view_show%>" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
            <%= render "layouts/dashboards/restaurant-user/view-items"%>
        </div>
        <div class="tab-pane fade <%=add_show%>" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
            <%=render "layouts/dashboards/restaurant-user/add-item"%>
        </div>
    </div>
</div>