<div class="text-center"> <h2>Items</h2><br></div>
<table id="view-item-table" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Item Photo</th>
                <th>Item Name</th>
                <th>Item Description</th>
                <th>Item Price</th>
                <th>Type</th>
                <th></th>
                <!--th></th-->
            </tr>
        </thead>

        <tbody>
            <% @items.each do |item|%>
                <tr>
                    <td><%= image_tag(item.image.attached? ? item.image : "food-item.png" , size:"80x80") %>
                    <td><%= item.name %></td>
                    <td><%= item.description %></td>
                    <td><%= item.price %></td>
                    <td><%= item.item_type %></td>
                    <td><%= link_to "Modify Item", '/restaurants/'+@restaurant.id.to_s+'/items/'+item.id.to_s+'/edit'%></td>
                    <!--td><%= link_to "Delete Item",'/restaurants/'+@restaurant.id.to_s+'/items/'+item.id.to_s, method: :delete%></td-->
                </tr>
            <% end %>
        </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#view-item-table').DataTable({
        "pageLength": 5
    });
} );
</script>