<div class="container">
    <div class="row my-2">
        <div class="col-md-9 order-md-2">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="true">Profile</a>
                    <a class="nav-item nav-link active" id="nav-edit-tab" data-toggle="tab" href="#nav-edit" role="tab" aria-controls="nav-edit" aria-selected="false">Edit</a>
                </div>
            </nav>

            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <%= render "layouts/user-profile"%>
                </div>

                <div class="tab-pane fade show active" id="nav-edit" role="tabpanel" aria-labelledby="nav-edit-tab">
                    <%= render "layouts/user-edit-profile"%>
                </div>
            </div>
        </div>
        <div class="col-md-3 order-md-1">
            <% if !@user.image.attached? %>
                <%= image_tag "food.jpg", size:"250x250", class:"mx-auto img-fluid img-circle d-block"%>
            <% else %>
                <%= image_tag @user.image, size:"250x250", class:"mx-auto img-fluid img-circle d-block"%>
            <% end %>
            <h6 class="mt-2 text-center">Profile Photo</h6>
        </div>    
    </div>
</div>